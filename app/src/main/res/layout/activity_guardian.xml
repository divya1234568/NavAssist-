<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:background="#0A0F1E">

    <!-- Topbar -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="64dp"
        android:orientation="horizontal" android:gravity="center_vertical"
        android:paddingStart="16dp" android:paddingEnd="16dp" android:background="#141929">
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:text="ðŸ›¡ï¸ Guardian Hub" android:textSize="20sp" android:textStyle="bold" android:textColor="#FFFFFF"/>
        <Button android:id="@+id/btn_back3" android:layout_width="wrap_content" android:layout_height="40dp"
            android:text="â† Back" android:textColor="#8B97C4" android:backgroundTint="#1E2540" android:textSize="13sp"/>
    </LinearLayout>

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:padding="16dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">

            <!-- Mode Toggle -->
            <Button android:id="@+id/btn_toggle_mode"
                android:layout_width="match_parent" android:layout_height="56dp"
                android:text="ðŸ›¡ Switch to: GUARDIAN Mode"
                android:textSize="14sp" android:textStyle="bold"
                android:textColor="#FFFFFF" android:backgroundTint="#0057FF"
                android:layout_marginBottom="16dp"/>

            <!-- Paired Status -->
            <TextView android:id="@+id/tv_paired_status"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="âš  Not paired yet"
                android:textSize="14sp" android:textColor="#FF8A9B"
                android:gravity="center" android:layout_marginBottom="16dp"/>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- USER SECTION - shown when in USER mode     -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <LinearLayout android:id="@+id/layout_user_section"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Step 1: Your Name -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:background="#141929" android:padding="16dp"
                    android:orientation="vertical" android:layout_marginBottom="14dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="STEP 1 â€” YOUR NAME" android:textSize="11sp" android:textStyle="bold"
                        android:textColor="#8B97C4" android:layout_marginBottom="10dp"/>
                    <EditText android:id="@+id/et_user_name"
                        android:layout_width="match_parent" android:layout_height="48dp"
                        android:hint="Enter your name" android:textColor="#FFFFFF"
                        android:textColorHint="#555" android:background="#1E2540"
                        android:paddingStart="12dp" android:paddingEnd="12dp"
                        android:inputType="textPersonName" android:layout_marginBottom="10dp"/>
                    <Button android:id="@+id/btn_save_name"
                        android:layout_width="wrap_content" android:layout_height="40dp"
                        android:text="Save Name" android:textColor="#FFFFFF"
                        android:backgroundTint="#0057FF" android:textSize="13sp"/>
                </LinearLayout>

                <!-- Step 2: Guardian Phone Number -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:background="#141929" android:padding="16dp"
                    android:orientation="vertical" android:layout_marginBottom="14dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="STEP 2 â€” GUARDIAN'S PHONE NUMBER" android:textSize="11sp" android:textStyle="bold"
                        android:textColor="#8B97C4" android:layout_marginBottom="6dp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="Include country code e.g. +919876543210"
                        android:textSize="11sp" android:textColor="#555" android:layout_marginBottom="10dp"/>
                    <EditText android:id="@+id/et_guardian_phone"
                        android:layout_width="match_parent" android:layout_height="48dp"
                        android:hint="+91XXXXXXXXXX" android:textColor="#FFFFFF"
                        android:textColorHint="#555" android:background="#1E2540"
                        android:paddingStart="12dp" android:paddingEnd="12dp"
                        android:inputType="phone" android:layout_marginBottom="10dp"/>
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button android:id="@+id/btn_save_guardian"
                            android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1"
                            android:text="ðŸ’¾ Save" android:textColor="#FFFFFF"
                            android:backgroundTint="#00A86B" android:textSize="13sp" android:layout_marginEnd="8dp"/>
                    </LinearLayout>
                    <TextView android:id="@+id/tv_guardian_saved"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="" android:textSize="12sp" android:textColor="#00C97B"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Step 3: My Pairing Code -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:background="#141929" android:padding="16dp"
                    android:orientation="vertical" android:layout_marginBottom="14dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="STEP 3 â€” YOUR PAIRING CODE (share with guardian)"
                        android:textSize="11sp" android:textStyle="bold"
                        android:textColor="#8B97C4" android:layout_marginBottom="10dp"/>
                    <TextView android:id="@+id/tv_my_code"
                        android:layout_width="match_parent" android:layout_height="72dp"
                        android:text="------" android:textSize="40sp" android:textStyle="bold"
                        android:textColor="#FFFFFF" android:gravity="center"
                        android:letterSpacing="0.3" android:background="#0D1220"
                        android:layout_marginBottom="12dp"/>
                    <TextView android:id="@+id/tv_pairing_status"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="Share this code with your guardian"
                        android:textSize="12sp" android:textColor="#8B97C4" android:layout_marginBottom="12dp"/>
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button android:id="@+id/btn_send_code"
                            android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1"
                            android:text="ðŸ“² Send Code via SMS" android:textColor="#FFFFFF"
                            android:backgroundTint="#FF3C5F" android:textSize="13sp" android:layout_marginEnd="8dp"/>
                        <Button android:id="@+id/btn_regen_code"
                            android:layout_width="wrap_content" android:layout_height="48dp"
                            android:text="ðŸ”„ New" android:textColor="#8B97C4"
                            android:backgroundTint="#1E2540" android:textSize="13sp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Live Location Display -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:background="#141929" android:padding="16dp"
                    android:orientation="vertical" android:layout_marginBottom="14dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="CURRENT STATUS" android:textSize="11sp" android:textStyle="bold"
                        android:textColor="#8B97C4" android:layout_marginBottom="10dp"/>
                    <TextView android:id="@+id/tv_gloc"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:text="ðŸ“ Detecting location..." android:textSize="13sp" android:textColor="#E8EEFF"
                        android:background="#1E2540" android:padding="10dp" android:layout_marginBottom="8dp"/>
                    <TextView android:id="@+id/tv_gtime"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="Updated just now" android:textSize="11sp" android:textColor="#8B97C4"/>
                </LinearLayout>

            </LinearLayout>
            <!-- END USER SECTION -->

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- GUARDIAN SECTION - shown when in GUARDIAN mode -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <LinearLayout android:id="@+id/layout_guardian_section"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:background="#141929" android:padding="16dp"
                    android:orientation="vertical" android:layout_marginBottom="14dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="ENTER PAIRING CODE FROM USER" android:textSize="11sp" android:textStyle="bold"
                        android:textColor="#8B97C4" android:layout_marginBottom="8dp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="Ask the user for their 6-digit code (sent by SMS)"
                        android:textSize="12sp" android:textColor="#555" android:layout_marginBottom="12dp"/>
                    <EditText android:id="@+id/et_pairing_code"
                        android:layout_width="match_parent" android:layout_height="64dp"
                        android:hint="Enter 6-digit code" android:textColor="#FFFFFF"
                        android:textColorHint="#555" android:background="#1E2540"
                        android:paddingStart="12dp" android:paddingEnd="12dp"
                        android:textSize="28sp" android:gravity="center"
                        android:inputType="number" android:maxLength="6"
                        android:layout_marginBottom="12dp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="User's phone number (from pairing SMS)" android:textSize="12sp"
                        android:textColor="#8B97C4" android:layout_marginBottom="8dp"/>
                    <EditText android:id="@+id/et_paired_user_phone"
                        android:layout_width="match_parent" android:layout_height="48dp"
                        android:hint="+91XXXXXXXXXX (user's number)" android:textColor="#FFFFFF"
                        android:textColorHint="#555" android:background="#1E2540"
                        android:paddingStart="12dp" android:paddingEnd="12dp"
                        android:inputType="phone" android:layout_marginBottom="12dp"/>
                    <Button android:id="@+id/btn_enter_code"
                        android:layout_width="match_parent" android:layout_height="56dp"
                        android:text="âœ… CONFIRM PAIRING" android:textColor="#FFFFFF"
                        android:backgroundTint="#00A86B" android:textSize="16sp" android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:background="#141929" android:padding="16dp"
                    android:orientation="vertical" android:layout_marginBottom="14dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="HOW SOS WORKS" android:textSize="11sp" android:textStyle="bold"
                        android:textColor="#8B97C4" android:layout_marginBottom="10dp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="When the user taps SOS, you will receive an SMS with:\n\nðŸš¨ Emergency alert\nðŸ“ Live GPS location link\n\nOpen the link to see exactly where they are."
                        android:textSize="13sp" android:textColor="#E8EEFF" android:lineSpacingMultiplier="1.4"/>
                </LinearLayout>

            </LinearLayout>
            <!-- END GUARDIAN SECTION -->

        </LinearLayout>
    </ScrollView>
</LinearLayout>
